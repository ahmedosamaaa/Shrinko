<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Shrinko</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg  navbar-dark">
        <div class="container">
          <a class="navbar-brand" href="#">Shrinko</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav m-auto mb-2 mb-lg-0">
              
              <li class="nav-item">
                <a class="nav-link" href="/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users">Users</a>
              </li>

            </ul>
          </div>
        </div>
      </nav>
    
    <div class="container">
      <form action="/url/shortUrl" method="post" class="my-4 ">
        <div class="row">
          <input name="url" type="text" class="form-control my-3 col-8" placeholder="Enter URL">
          <button class="btn btn-success ">Shrink</button>
        </div>
      </form>
      
    <!-- table -->
    <table class="table text-white text-center table-responsive ">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% for( let index = 0; index < urls.length; index++ ) { %>
          
          <tr>
            <td>
              <a href=<%= urls[index].full %>><%= urls[index].full %></a>
            </td>
            <td>
              <a href=<%= urls[index].short %>><%= urls[index].short %></a>
            </td>
            <td><%= urls[index].clicks %></td>
          </tr>
          
        <% } %>
      </tbody>

    </table>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>